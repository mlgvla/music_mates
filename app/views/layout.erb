    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    

    <title>MusicMates</title>

    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0" /> -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/instruments">Music Mates</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user %>
          <li class="nav-item">
            <a class="nav-link" href="/instruments">Find Music Mates</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/<%= current_user.id %>">My Profile</a>
          </li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if !current_user%>
            <li class="nav-item">
              <a class="nav-link" href="/users/new">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Login</a>
            </li>
            <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/users/logout">Logout</a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="wrapper">
    
      
    <!-- Added ERB for Flash notices -->
    <%= "<div class='notice'>#{flash[:notice]}</div>" if flash[:notice]  %>
    


        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>MusicMates</strong></small>
      </footer>
    </div>

